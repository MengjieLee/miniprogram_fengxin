.formLabelWrapper {
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx 0rpx;
}

.formLabelRequired {
  display: inline-block;
  color: red;
}

.formTitleInput {
  border: 2rpx solid rgba(220, 220, 220, 1);
  border-radius: 12rpx;
}

.horizontal-box {
  width: calc(100% - 64rpx);
  display: flex;
  align-items: center;
  margin: 32rpx;
}

.horizontal-box .card {
  flex: 1;
  margin: 0;
}

.card {
  position: relative;
  margin: 32rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 3rpx solid #fff;
}

.card--active-region_construction {
  border-color: #1AAD5E;
}

.card--active-app_function {
  border-color: #6947CC;
}

.card--active-other_question {
  border-color: #176DE6;
}

.card--active-region_construction::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 36rpx solid #1AAD5E;
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card--active-app_function::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 36rpx solid #6947CC;
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card--active-other_question::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 36rpx solid #176DE6;
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: #fff;
  position: absolute;
  left: 2rpx;
  top: 2rpx;
  z-index: 1;
}


.horizontal-box .card+.card {
  margin-left: 24rpx;
}

.submit-btn {
  margin-top: 20rpx;
  color: white !important;
  background-color: #1AAD5E !important;
}